{
  "name": "@hyperbola/hyperbola-static",
  "version": "0.2.0",
  "private": true,
  "description": "Static site infrastructure and content for hyperbo.la",
  "keywords": [
    "assets",
    "blog",
    "build pipeline",
    "static site",
    "webpack"
  ],
  "homepage": "https://hyperbo.la",
  "bugs": "https://github.com/lopopolo/hyperbola-static/issues",
  "license": "MIT",
  "author": "Ryan Lopopolo <rjl@hyperbo.la> (https://hyperbo.la/)",
  "contributors": [
    "Ryan Lopopolo <rjl@hyperbo.la> (https://hyperbo.la/)"
  ],
  "repository": "github:lopopolo/hyperbola-static",
  "main": "./index.js",
  "bin": {
    "generate": "./bin/generate.js"
  },
  "dependencies": {
    "bootstrap": "^4.6.0",
    "commander": "^7.1.0",
    "ejs": "^3.1.6",
    "jquery": "^3.6.0",
    "js-yaml": "^4.0.0",
    "linkifyjs": "^2.1.9",
    "luxon": "^1.26.0",
    "paginate-array": "^2.1.0",
    "popper.js": "^1.16.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@hyperbola/svgo-loader": "^0.1.2",
    "css-loader": "^5.1.1",
    "css-minimizer-webpack-plugin": "^1.2.0",
    "front-matter": "^4.0.2",
    "highlight.js": "^10.6.0",
    "html-loader": "^1.3.2",
    "html-webpack-plugin": "^5.2.0",
    "markdown-loader": "^6.0.0",
    "mini-css-extract-plugin": "^1.3.9",
    "mini-svg-data-uri": "^1.2.3",
    "sass": "^1.32.8",
    "sass-loader": "^11.0.1",
    "style-loader": "^2.0.0",
    "svgo": "^1.3.2",
    "webpack": "^5.24.2",
    "webpack-cli": "^4.5.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module"
    }
  },
  "scripts": {
    "build": "npx -p . generate site",
    "dev": "rm -rf dist ; ./bin/build.sh --development ; python3 -m http.server --directory dist",
    "dev:production": "rm -rf dist ; ./bin/build.sh --production ; python3 -m http.server --directory dist",
    "fmt": "npx prettier --write '**/*'",
    "lint": "npx eslint .",
    "lint:fix": "npx eslint --fix ."
  }
}
