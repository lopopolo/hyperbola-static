{
  "name": "@lopopolo/hyperbola-static",
  "version": "0.1.0",
  "private": true,
  "description": "Static site infrastructure and content for hyperbo.la",
  "keywords": [
    "assets",
    "blog",
    "build pipeline",
    "static site",
    "webpack"
  ],
  "homepage": "https://hyperbo.la",
  "bugs": "https://github.com/lopopolo/hyperbola-static/issues",
  "license": "MIT",
  "author": "Ryan Lopopolo <rjl@hyperbo.la> (https://hyperbo.la/)",
  "contributors": [
    "Ryan Lopopolo <rjl@hyperbo.la> (https://hyperbo.la/)"
  ],
  "repository": "github:lopopolo/hyperbola-static",
  "dependencies": {
    "bootstrap": "^4.4.1",
    "jquery": "^3.5.1",
    "popper.js": "^1.16.1"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "babel-loader": "^8.1.0",
    "cname-webpack-plugin": "^2.0.1",
    "css-loader": "^3.5.2",
    "ejs": "^3.0.2",
    "file-loader": "^6.0.0",
    "front-matter": "^3.1.0",
    "highlight.js": "^9.18.1",
    "html-loader": "^1.1.0",
    "html-webpack-plugin": "^4.2.0",
    "image-webpack-loader": "^6.0.0",
    "jimp": "^0.10.1",
    "js-yaml": "^3.13.1",
    "markdown-loader": "^5.1.0",
    "mini-css-extract-plugin": "^0.9.0",
    "moment": "^2.24.0",
    "node-sass": "^4.14.1",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "paginate-array": "^2.1.0",
    "responsive-loader": "^1.2.0",
    "sass-loader": "^8.0.2",
    "svgo": "^1.3.2",
    "svgo-loader": "^2.2.1",
    "terser-webpack-plugin": "^2.3.5",
    "url-loader": "^4.1.0",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0",
    "yaml-loader": "^0.6.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module"
    }
  },
  "scripts": {
    "build": "node ./blog/index.js && npm run fmt && npm run fmt:md && npm run fmt:yaml",
    "dev": "npx webpack-dev-server",
    "dev:open": "npx webpack-dev-server --open",
    "fmt": "npx prettier --write '**/*'",
    "fmt:md": "npx prettier --prose-wrap always --write '**/*.md'",
    "fmt:yaml": "npx prettier --prose-wrap always --write '**/*.yaml'",
    "lint:js": "npx eslint --fix ."
  }
}
